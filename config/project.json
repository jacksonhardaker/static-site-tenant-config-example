{
  "name": "config",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "config/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/config",
        "command": "node config/build.js {args.tenant}"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        },
        "production:orange": {
          "mode": "production",
          "args": "--tenant=orange"
        },
        "production:apple": {
          "mode": "production",
          "args": "--tenant=apple"
        },
        "development:orange": {
          "mode": "development",
          "args": "--tenant=orange"
        },
        "development:apple": {
          "mode": "development",
          "args": "--tenant=apple"
        }
      }
    }
  }
}
